<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemLayoutPricesListView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/itemPriceTextViewPricesListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/price_textview_listview_placeholder"
        android:textColor="@color/price_textView_listview"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/itemMiniatureImageViewItemPriceListView"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_margin="15dp"
        android:contentDescription="@string/item_imageview_pricelistview_contentdescriptor"
        android:scaleType="fitCenter"
        android:src="@drawable/no_miniature_placeholder" />

    <ImageView
        android:id="@+id/itemDeletePriceImageViewitemPriceListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:clickable="true"
        android:contentDescription="@string/itemdelete_imageview_pricelistview_contentdescriptor"
        android:focusable="true"
        android:src="@drawable/ic_delete"
        android:visibility="visible" />
</LinearLayout>




